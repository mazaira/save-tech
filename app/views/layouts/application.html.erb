<!DOCTYPE html>
<html lang="en" class="full-height">
  <head>
    <title>SaveTech</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="navbar-brand" href="#">Save Tech ðŸ“– </a>
                          </li>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <% if user_signed_in? %>
              <%= link_to "#{current_user.email}", edit_user_registration_path, class: 'btn btn-outline-dark my-2 my-sm-0' %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'btn btn-outline-dark my-2 my-sm-0'  %>
            <% else %>
              <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-outline-success my-2 my-sm-0' %>
              <%= link_to "Login", new_user_session_path, class: 'btn btn-outline-success my-2 my-sm-0' %>
            <% end %>
          </form>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
