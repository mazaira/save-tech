<div class="card-deck">
  <% items.each do |item| %>
    <div class="col-md-3">
      <div class="card mb-3 box-shadow card-item">
        <div class ='d-flex'>
          <img class="card-img-top" src="<%= item.meta.try(:[],'image') || image_url('default.jpg') %>" alt=''>
          <h6 class="card-title"> <%= item.meta['title']&.first(60) || item.object.link %> </h6>
        </div>

        <div class="card-body">
          <p class="card-text"><%= item.meta['description']&.first(70).try(:+, '...') %></p>
          <a href=<%= item.object.link %> class="stretched-link"></a>
          <div class="d-flex justify-content-between align-items-center">
            <% item.object.tags.pluck(:name).map do |tag| %>
              <%= link_to tag, filter_items_path(name: tag), class: 'fixed-tag btn btn-sm btn--themed', remote: true %>
            <% end %>

            <small class="text-muted"><%= time_ago_in_words(item.object.created_at) %></small>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>
