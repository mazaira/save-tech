<div class="container">
  <div class="card-deck">
    <% @items.each do |item| %>
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <img class="card-img-top" src="<%= item&.second.try(:[],'image')%>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"> <%= item.second['title']%> </h5>
            <p class="card-text"><%= item.second['description'] %></p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" href=<%= item.first.link %> class="btn btn-sm btn-outline-secondary">to the site</button>
              </div>
              <small class="text-muted"><%= time_ago_in_words(item.first.created_at) %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

