<div class="container">
  <div class="card-deck">
    <% @items.each do |item| %>
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <img class="card-img-top" src="<%= item&.second.try(:[],'image') || asset_path('emoji.jpeg') %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"> <%= item.second['title'] || item.first.link %> </h5>
            <p class="card-text"><%= item.second['description'] %></p>
            <div class="d-flex justify-content-between align-items-center">
                <a href=<%= item.first.link %> class="btn btn-outline-primary">to site</a>
              <small class="text-muted"><%= time_ago_in_words(item.first.created_at) %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

