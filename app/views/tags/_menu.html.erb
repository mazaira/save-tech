<div>
  <%= link_to feather('inbox', 'Pending to filter'),
    pending_to_filter_path,
    class: 'btn btn-light pending-to-filter',
    remote: true
  %>
</div>

<div class="tag-container">
  <ul class='list-group'>
    <% tags&.each do |tag| %>
    <li class='list-group-item d-flex'>
      <%= link_to tag.name, filter_items_path(name: tag.name), class: 'fixed-tag btn btn-sm btn-outline-info', remote: true %>
    </li>
    <% end %>
  </ul>
</div>

<script src='https://cdnjs.cloudflare.com/ajax/libs/randomcolor/0.5.4/randomColor.min.js'></script>
